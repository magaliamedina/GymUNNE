<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FragmentPersonalCuposLibres">

    <ProgressBar
        android:id="@+id/progressBarPersonalCupos"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_margin="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/btn_limpiar_cupos"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_clean"
            android:text="limpiar cupos"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ListView
            android:id="@+id/lvPersonalListarCuposLibres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            layout="@layout/sin_conexion_internet"/>
    </LinearLayout>


</FrameLayout>